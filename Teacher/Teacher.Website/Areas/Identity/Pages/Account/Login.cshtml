@page
@model LoginModel
@{
    ViewData["Title"] = "Zaloguj";
    Layout = "~/Feature/Shared/_LayoutNoHeader.cshtml";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form id="account" method="post">
            <div class="form-group">
                <input asp-for="Input.Login" class="form-control" placeholder="Login" />
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            </div>
            <div class="center mt-md-4">
                <button type="submit" class="btn btn-outline-primary btn-block">Zaloguj</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}