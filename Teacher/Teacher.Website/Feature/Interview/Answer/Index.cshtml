@page
@model Interview.Answer.IndexModel
@{
    ViewData["Title"] = "Rozmowa rekrutacyjna";
}

<h4>@ViewData["Title"]</h4>

<div class="row d-flex justify-content-center">
    <div class="col-md-4 center">
        <section>
            <form method="post">
                <div>
                    <input asp-for="Data.Answer.QuestionId" type="hidden" />
                    <p><b>@Model.Data.Question.CategoryName</b></p>
                    <p>@Model.Data.Question.Content</p>
                    <button onclick="showAnswer(); return false;" class="btn btn-outline-info">Pokaż odpowiedź</button>
                </div>
                <br />
                <div id="answer" style="visibility: hidden">
                    <p>@Model.Data.Question.Answer</p>
                    <br />
                    <p>Czy znałeś/-aś odpowiedź?</p>
                    <input asp-for="Data.Answer.WasAnswerCorrect" type="hidden" />
                    <button type="submit" class="btn btn-danger">Nie</button>
                    <button type="submit" class="btn btn-success" onclick="markAnswer();">Tak</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
<script type="text/javascript">
function showAnswer() {
  document.getElementById("answer").style.visibility = "visible";
}

function markAnswer() {
  document.getElementById("Data_Answer_WasAnswerCorrect").value  = true;
}
</script>
}